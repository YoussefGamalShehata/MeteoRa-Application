<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="#FFE0E0E0"> <!-- Softer Background Color -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="14sp"
            android:textColor="#FF424242"
        android:textStyle="bold"
        android:layout_weight="1"
        android:layout_marginEnd="8dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/maxTempImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/max_temp_icon"
                android:src="@drawable/maxtemp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/circle_background"
                android:padding="4dp"
                />

            <TextView
                android:id="@+id/maxTempTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max Temp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FF424242" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/minTempImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/min_temp_icon"
                android:src="@drawable/mintemp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/circle_background"
                android:padding="4dp"
                app:tint="#FFB0BEC5" />

            <TextView
                android:id="@+id/minTempTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min Temp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FF424242" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
